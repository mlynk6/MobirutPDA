<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="filtroslys.mobirutpda.BuscarCliente">

    <LinearLayout
        android:id="@+id/tabBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/lbl_buscarclientetitulo"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"/>

            <TableLayout android:id="@+id/lbl_panelbuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="2">

                <TableRow android:layout_marginBottom="4dp">
                    <TextView
                        android:text="@string/lbl_buscarclientecodigo"
                        android:textSize="15dp"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="fill_vertical"/>

                    <EditText
                        android:id="@+id/txtCodigo"
                        android:layout_column="2"
                        android:inputType="number"
                        android:layout_height="25dp"
                        android:textSize="15dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="fill_vertical"
                        android:hint="@string/ingresartexto"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLength="10">
                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="15dp"
                        android:text="@string/btn_buscar"
                        android:onClick="EventoBuscar"
                        android:layout_marginRight="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="6dp">
                    <TextView
                        android:text="@string/lbl_buscarclienterazon"
                        android:textSize="15dp"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="fill_vertical"/>

                    <EditText
                        android:id="@+id/txtNombre"
                        android:layout_column="2"
                        android:layout_height="25dp"
                        android:textSize="15dp"
                        android:layout_marginRight="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:inputType="textCapCharacters"
                        android:capitalize="characters"
                        android:hint="@string/ingresartexto"
                        android:maxLength="15"/>

                    <Button
                        android:id="@+id/btnLimpiar"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="15dp"
                        android:text="@string/btn_Limpiar"
                        android:onClick="EventoLimpiar"
                        android:layout_marginRight="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <!-- Panel de Filtrado -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorLine"/>

            <ListView
                android:id="@+id/lvCliente"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#FFFFFF"
                android:dividerHeight="1dp"
                android:layout_gravity="center"
                android:drawSelectorOnTop="false"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
